@{
    ViewBag.Title = "Index";
}

<h2>Select Worker and File Status</h2>

@using (Html.BeginForm("Report", "Report", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("AssignedWorkerId", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("StatusOfFileId", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div>
    <input type='submit' value='Submit your Form' />
}

   
